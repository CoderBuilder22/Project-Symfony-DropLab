{% extends 'base.html.twig' %}

{% block title %}Create Your DropLab Account{% endblock %}

{% block body %}
<section class="auth-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="auth-card">
                    <div class="text-center mb-4">
                        <img src="{{ asset('uploads/images/covers/logo.png') }}" alt="DropLab" class="auth-logo mb-4">
                        <h1 class="h3">Join DropLab</h1>
                        <p class="text-secondary">Create your account today</p>
                    </div>

                    {{ form_start(registrationForm, {'attr': {'class': 'auth-form needs-validation'}}) }}
                        {{ form_errors(registrationForm) }}

                        <div class="form-group mb-4">
                            <h4 class="text-center mb-3">Choose your role</h4>
                            <div class="role-options">
                                <div class="row g-3">
                                    {% for choice in registrationForm.role %}
                                        <div class="col-md-6">
                                            <div class="role-card">
                                                {{ form_widget(choice, {
                                                    'attr': {
                                                        'class': 'role-input',
                                                        'data-role': choice.vars.value|lower
                                                    }
                                                }) }}
                                                <label for="{{ choice.vars.id }}" class="role-label">
                                                    <div class="role-icon">
                                                        {% if choice.vars.value == 'ROLE_PRODUCER' %}
                                                            <i class="fas fa-music"></i>
                                                        {% else %}
                                                            <i class="fas fa-shopping-bag"></i>
                                                        {% endif %}
                                                    </div>
                                                    <h4>{{ choice.vars.label }}</h4>
                                                    <p class="role-description">
                                                        {% if choice.vars.value == 'ROLE_PRODUCER' %}
                                                            Upload and sell your beats
                                                        {% else %}
                                                            Browse and purchase beats
                                                        {% endif %}
                                                    </p>
                                                </label>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                                {{ form_errors(registrationForm.role) }}
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(registrationForm.username, 'Username', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.username, {
                                'attr': {
                                    'class': 'form-control' ~ (not registrationForm.username.vars.valid ? ' is-invalid'),
                                    'placeholder': 'Choose your username'
                                }
                            }) }}
                            {{ form_errors(registrationForm.username) }}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(registrationForm.email, 'Email address', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.email, {
                                'attr': {
                                    'class': 'form-control' ~ (not registrationForm.email.vars.valid ? ' is-invalid'),
                                    'placeholder': 'name@example.com'
                                }
                            }) }}
                            {{ form_errors(registrationForm.email) }}
                        </div>

                        <div class="form-group mb-4">
                            {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.plainPassword, {
                                'attr': {
                                    'class': 'form-control' ~ (not registrationForm.plainPassword.vars.valid ? ' is-invalid'),
                                    'placeholder': 'Create a strong password'
                                }
                            }) }}
                            {{ form_errors(registrationForm.plainPassword) }}
                            <div class="password-requirements mt-2">
                                <small class="text-secondary">
                                    <i class="fas fa-info-circle me-1"></i>Password must be at least 6 characters
                                </small>
                            </div>
                        </div>

                       

                        <button type="submit" class="btn btn-primary w-100 btn-lg mb-3">
                            <i class="fas fa-user-plus me-2"></i>Create Account
                        </button>

                        <div class="text-center">
                            <p class="mb-0">Already have an account? <a href="{{ path('app_login') }}" class="text-primary">Sign in</a></p>
                        </div>
                        {{ form_rest(registrationForm) }}
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .auth-section {
        min-height: calc(100vh - 180px);
        display: flex;
        align-items: center;
        background: linear-gradient(to bottom, var(--darker-bg), var(--dark-bg));
    }

    .auth-card {
        background: var(--card-bg);
        border-radius: 15px;
        padding: 2.5rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .auth-logo {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .role-options {
        margin-bottom: 2rem;
    }

    .role-card {
        position: relative;
        height: 100%;
    }

    .role-input {
        position: absolute;
        opacity: 0;
        width: 0;
        height: 0;
    }

    .role-label {
        display: block;
        padding: 1.5rem;
        background: var(--dark-bg);
        border: 2px solid var(--border-color);
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.3s ease;
        text-align: center;
        height: 100%;
    }

    .role-input:checked + .role-label {
        border-color: var(--primary-color);
        background: rgba(13, 110, 253, 0.1);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(13, 110, 253, 0.2);
    }

    .role-icon {
        font-size: 2rem;
        color: var(--primary-color);
        margin-bottom: 1rem;
    }

    .role-label h4 {
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
        color: var(--text-primary);
    }

    .role-description {
        font-size: 0.9rem;
        color: var(--text-secondary);
        margin: 0;
    }

    .auth-form .form-control {
        background-color: var(--dark-bg);
        border: 1px solid var(--border-color);
        color: var(--text-primary);
        transition: all 0.3s ease;
        padding: 0.75rem 1rem;
        font-size: 0.95rem;
    }

    .auth-form .form-control:focus {
        background-color: var(--dark-bg);
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
        color: var(--text-primary);
    }

    .auth-form .form-label {
        color: var(--text-secondary);
        font-size: 0.95rem;
        margin-bottom: 0.5rem;
    }

    .auth-form .form-check-label {
        color: var(--text-secondary);
        font-size: 0.9rem;
    }

    .auth-form .form-check-input {
        background-color: var(--dark-bg);
        border-color: var(--border-color);
        cursor: pointer;
    }

    .auth-form .form-check-input:checked {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }

    .auth-form .btn-primary {
        padding: 1rem;
        font-weight: 500;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .auth-form .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(13, 110, 253, 0.3);
    }

    .invalid-feedback {
        color: var(--danger-color);
        font-size: 0.875rem;
        margin-top: 0.5rem;
    }

    .password-requirements {
        font-size: 0.875rem;
        color: var(--text-secondary);
    }
</style>
{% endblock %} 