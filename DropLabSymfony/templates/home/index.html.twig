{% extends 'base.html.twig' %}

{% block title %}Welcome to DropLab{% endblock %}

{% block body %}
    {# Hero Section with Dynamic Background #}
    <section class="hero-section">
        <div class="hero-background">
            <img src="{{ asset('uploads/images/covers/img (28).jfif') }}" alt="Background 1" class="active">
            <img src="{{ asset('uploads/images/covers/img (6).jfif') }}" alt="Background 2">
            <img src="{{ asset('uploads/images/covers/img (9).jfif') }}" alt="Background 3">
            <img src="{{ asset('uploads/images/covers/img (29).jfif') }}" alt="Background 4">
        </div>
        <div class="container text-center">
            <h1>Find Your Perfect Beat</h1>
            <h2>Your first hit starts here</h2>
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <form class="d-flex" action="{{ path('app_beat_index') }}" method="GET">
                        <input class="form-control form-control-lg me-2" type="search" name="q" placeholder="Search for beats, genres, or producers...">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    {# Trending Tracks Section #}
    <section class="trending-section position-relative">
        <div class="section-background"></div>
        <div class="container-fluid px-4 position-relative">
            <div class="section-header d-flex justify-content-between align-items-center mb-4">
                <h2 class="section-title">
                    <i class="fas fa-fire text-primary"></i>
                    Trending Tracks
                </h2>
                <a href="{{ path('app_beat_index') }}" class="btn btn-outline-primary">See more</a>
            </div>
            <div class="beats-grid">
                {% for beat in trending_beats %}
                    <div class="beat-card">
                        <div class="beat-image-wrapper" 
                             data-audio="{{ asset('uploads/beats/' ~ beat.audioFile) }}"
                             data-title="{{ beat.title }}"
                             data-id="{{ beat.id }}">
                            {% if beat.coverImage %}
                                <img src="{{ asset('uploads/images/covers/' ~ beat.coverImage) }}" class="beat-image" alt="{{ beat.title }}">
                            {% else %}
                                <div class="beat-image bg-dark d-flex align-items-center justify-content-center">
                                    <i class="fas fa-music fa-3x text-muted"></i>
                                </div>
                            {% endif %}
                            <div class="beat-overlay">
                                <button class="beat-play-btn">
                                    <i class="fas fa-play"></i>
                                </button>
                            </div>
                        </div>
                        <div class="beat-info">
                            <h3 class="beat-title">{{ beat.title }}</h3>
                            <div class="beat-producer">
                                <i class="fas fa-user"></i>
                                {{ beat.producer.username }}
                            </div>
                            <div class="beat-details">
                                <div class="beat-bpm">
                                    <i class="fas fa-music"></i>
                                    {{ beat.bpm }} BPM
                                </div>
                                {% if is_granted('ROLE_CUSTOMER') %}
                                    <form action="{{ path('app_cart_add', {'id': beat.id}) }}" method="post" class="w-100">
                                        <input type="hidden" name="_token" value="{{ csrf_token('add-to-cart' ~ beat.id) }}">
                                        <button type="submit" class="beat-price-btn">
                                            <i class="fas fa-shopping-bag"></i>
                                            ${{ beat.price }}
                                        </button>
                                    </form>
                                {% elseif is_granted('ROLE_PRODUCER') %}
                                    <div class="beat-price-btn disabled">
                                        <i class="fas fa-tag"></i>
                                        ${{ beat.price }}
                                    </div>
                                {% else %}
                                    <div class="beat-price-btn disabled">
                                        <i class="fas fa-tag"></i>
                                        ${{ beat.price }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- Audio Player -->
    <div class="audio-player" style="display: none;">
        <audio id="audioPlayer" controls controlsList="nodownload">
            <source src="" type="audio/mpeg">
            Your browser does not support the audio element.
        </audio>
        <button class="close-player" id="closePlayer">
            <i class="fas fa-times"></i>
        </button>
    </div>

    {# Beat Marketplace Section #}
    <section class="marketplace-section py-5 position-relative">
        <div class="marketplace-background"></div>
        <div class="marketplace-overlay"></div>
        <div class="container position-relative">
            <div class="row align-items-center g-4">
                <div class="col-md-6">
                    <div class="marketplace-images">
                        <div class="main-image-container mb-4 position-relative">
                            <img src="{{ asset('uploads/images/studio/studio2.jfif') }}" class="main-image rounded-lg shadow-lg" alt="Beat Production">
                            <div class="image-overlay"></div>
                        </div>
                        <div class="row g-4">
                            <div class="col-6">
                                <div class="sub-image-container position-relative">
                                    <img src="{{ asset('uploads/images/studio/studio3.jfif') }}" class="sub-image rounded-lg shadow" alt="Music Production">
                                    <div class="image-overlay"></div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="sub-image-container position-relative">
                                    <img src="{{ asset('uploads/images/studio/studio4.jfif') }}" class="sub-image rounded-lg shadow" alt="Beat Making">
                                    <div class="image-overlay"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="marketplace-content">
                        <span class="badge bg-primary mb-3">Premium Beats</span>
                        <h2 class="display-5 fw-bold mb-4">Your One-Stop Beat Marketplace</h2>
                        <p class="lead text-secondary mb-4">Discover, purchase, and download high-quality beats from talented producers worldwide. DropLab connects artists with the perfect sound for their next hit.</p>
                        <div class="marketplace-features">
                            <div class="feature-card mb-3">
                                <div class="feature-icon">
                                    <i class="fas fa-music"></i>
                                </div>
                                <div class="feature-text">
                                    <h5>High-Quality Beats</h5>
                                    <p>Professional-grade production with crystal-clear sound</p>
                                </div>
                            </div>
                            <div class="feature-card mb-3">
                                <div class="feature-icon">
                                    <i class="fas fa-dollar-sign"></i>
                                </div>
                                <div class="feature-text">
                                    <h5>Flexible Licensing</h5>
                                    <p>Various licensing options to fit your budget and needs</p>
                                </div>
                            </div>
                            <div class="feature-card mb-3">
                                <div class="feature-icon">
                                    <i class="fas fa-download"></i>
                                </div>
                                <div class="feature-text">
                                    <h5>Instant Delivery</h5>
                                    <p>Download your purchased beats immediately</p>
                                </div>
                            </div>
                            <div class="feature-card">
                                <div class="feature-icon">
                                    <i class="fas fa-shield-alt"></i>
                                </div>
                                <div class="feature-text">
                                    <h5>Secure Platform</h5>
                                    <p>Safe transactions and protected rights for all users</p>
                                </div>
                            </div>
                        </div>
                        <div class="mt-4">
                            <a href="{{ path('app_register') }}" class="btn btn-primary btn-lg me-3">Start Selling <i class="fas fa-arrow-right ms-2"></i></a>
                            <a href="{{ path('app_beat_index') }}" class="btn btn-outline-primary btn-lg">Browse Beats</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# Popular Genres Section #}
    <section class="genres-section py-5 position-relative">
        <div class="genres-background"></div>
        <div class="genres-overlay"></div>
        <div class="container position-relative">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="section-title">
                    <i class="fas fa-guitar text-success me-2"></i>
                    Genres
                </h2>
            </div>
            <div class="row g-4">
                {% for genre in ['Drill', 'Trap', 'House', 'Amapiano', 'Boombap', 'RnB'] %}
                    <div class="col-md-4">
                        <a href="{{ path('app_beat_index', {'genre': genre}) }}" class="genre-card-link">
                            <div class="genre-card">
                                <img src="{{ asset('uploads/images/genres/' ~ genre|lower ~ '.jfif') }}" alt="{{ genre }}">
                                <div class="card-img-overlay">
                                    <h3>{{ genre }}</h3>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    {# Statistics Section #}
    <section class="stats-section py-5 position-relative">
        <div class="stats-background"></div>
        <div class="stats-overlay"></div>
        <div class="container position-relative">
            <div class="row g-4">
                <div class="col-md-3">
                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="fas fa-music"></i>
                        </div>
                        <div class="stat-content">
                            <h3 class="stat-number">NbBeats</h3>
                            <p class="stat-label">Beats Available</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="fas fa-users"></i>
                        </div>
                        <div class="stat-content">
                            <h3 class="stat-number">NbP</h3>
                            <p class="stat-label">Active Producers</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="fas fa-download"></i>
                        </div>
                        <div class="stat-content">
                            <h3 class="stat-number">NbD</h3>
                            <p class="stat-label">Downloads</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="fas fa-star"></i>
                        </div>
                        <div class="stat-content">
                            <h3 class="stat-number">R</h3>
                            <p class="stat-label">Average Rating</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <style>
        .hero-section {
            position: relative;
            min-height: 80vh;
            display: flex;
            align-items: center;
        }

        .hero-background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
        }

        .hero-background img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0;
            transform: scale(1.1);
            transition: opacity 1.5s ease-in-out, transform 6s ease-in-out;
        }

        .hero-background img.active {
            opacity: 1;
            transform: scale(1);
        }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(
                to bottom,
                rgba(0, 0, 0, 0.95) 0%,
                rgba(0, 0, 0, 0.75) 50%,
                rgba(0, 0, 0, 0.95) 100%
            );
            z-index: 1;
        }

        .container {
            position: relative;
            z-index: 1;
        }

        .beat-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: opacity 0.3s ease;
            cursor: pointer;
        }

        .beat-card:hover .beat-overlay {
            opacity: 1;
        }

        .beat-play-btn {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) scale(0.9);
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: rgba(26, 115, 232, 0.9);
            border: 2px solid rgba(255, 255, 255, 0.2);
            color: white;
            font-size: 1.2rem;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            backdrop-filter: blur(5px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        }

        .beat-play-btn i {
            margin-left: 3px; /* Center the play icon */
        }

        .beat-card:hover .beat-play-btn {
            transform: translate(-50%, -50%) scale(1);
            background: rgba(26, 115, 232, 1);
            border-color: rgba(255, 255, 255, 0.4);
            box-shadow: 0 6px 20px rgba(26, 115, 232, 0.4);
        }

        .beat-play-btn:hover {
            transform: translate(-50%, -50%) scale(1.1) !important;
            background: #1557b0 !important;
            border-color: rgba(255, 255, 255, 0.6);
            box-shadow: 0 8px 25px rgba(26, 115, 232, 0.5);
        }

        .beat-play-btn.playing {
            background: #1557b0;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0% {
                box-shadow: 0 0 0 0 rgba(26, 115, 232, 0.6);
            }
            70% {
                box-shadow: 0 0 0 15px rgba(26, 115, 232, 0);
            }
            100% {
                box-shadow: 0 0 0 0 rgba(26, 115, 232, 0);
            }
        }

        .trending-section {
            padding: 2rem 0;
            background-color: transparent;
            position: relative;
            overflow: hidden;
        }

        .section-background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(180deg, #0a1128 0%, #1a237e 100%);
            z-index: -1;
        }

        .section-background::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                radial-gradient(circle at 20% 50%, rgba(41, 98, 255, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 80% 50%, rgba(41, 98, 255, 0.1) 0%, transparent 50%);
        }

        .section-header {
            padding: 0 1rem;
        }

        .section-title {
            font-size: 2rem;
            font-weight: 700;
            color: #fff;
            display: flex;
            align-items: center;
            gap: 1rem;
            margin: 0;
            animation: slideInUp 1s ease-out forwards;
            opacity: 0;
        }

        .section-title i {
            color: #2962ff;
        }

        @keyframes slideInUp {
            from {
                transform: translateY(20px);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .beats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
            gap: 1.5rem;
            padding: 0;
        }

        .beat-card {
            background: #0f0f0f;
            border-radius: 12px;
            overflow: hidden;
            transition: transform 0.3s ease;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .beat-card:hover {
            transform: translateY(-5px);
        }

        .beat-image-wrapper {
            position: relative;
            padding-top: 100%;
            overflow: hidden;
        }

        .beat-image {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .beat-info {
            padding: 1rem;
        }

        .beat-title {
            font-size: 1rem;
            font-weight: 600;
            color: white;
            margin-bottom: 0.5rem;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .beat-producer {
            font-size: 0.9rem;
            color: rgba(255, 255, 255, 0.7);
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .beat-details {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .beat-bpm, .beat-price {
            font-size: 0.9rem;
            color: rgba(255, 255, 255, 0.7);
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .beat-price {
            color: #1a73e8;
            font-weight: 600;
        }

        .beat-price-btn {
            width: 100%;
            padding: 0.75rem;
            background: #1a73e8;
            color: white;
            border-radius: 8px;
            font-weight: 600;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
            text-decoration: none;
            font-size: 1rem;
            border: none;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .beat-price-btn.disabled {
            background: #1f1f1f;
            cursor: default;
            color: rgba(255, 255, 255, 0.7);
            pointer-events: none;
        }

        .beat-price-btn:not(.disabled):hover {
            background: #1557b0;
            color: white;
            text-decoration: none;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(26, 115, 232, 0.2);
        }

        .beat-price-btn i {
            font-size: 1rem;
        }

        .audio-player {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            background: rgba(15, 15, 15, 0.95);
            padding: 1rem;
            z-index: 1000;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 1rem;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }

        .audio-player audio {
            width: 100%;
            max-width: 800px;
        }

        .close-player {
            background: none;
            border: none;
            color: white;
            font-size: 1.2rem;
            cursor: pointer;
            padding: 0.5rem;
            transition: color 0.3s ease;
        }

        .close-player:hover {
            color: #ff4444;
        }

        @media (max-width: 1200px) {
            .beats-grid {
                grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            }
        }

        @media (max-width: 768px) {
            .beats-grid {
                grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
            }
        }

        .marketplace-section {
            position: relative;
            overflow: hidden;
        }

        .marketplace-background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, var(--darker-bg) 0%, var(--dark-bg) 100%);
            z-index: -2;
        }

        .marketplace-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: 
                repeating-linear-gradient(
                    45deg,
                    rgba(255, 255, 255, 0.02) 0px,
                    rgba(255, 255, 255, 0.02) 1px,
                    transparent 1px,
                    transparent 10px
                );
            opacity: 0.03;
            z-index: -1;
        }

        .main-image-container, .sub-image-container {
            overflow: hidden;
            border-radius: 15px;
            transition: transform 0.3s ease;
        }

        .main-image-container:hover, .sub-image-container:hover {
            transform: translateY(-5px);
        }

        .main-image, .sub-image {
            width: 100%;
            height: 300px;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .sub-image {
            height: 200px;
        }

        .image-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.3);
            border-radius: 15px;
            transition: background 0.3s ease;
        }

        .main-image-container:hover .image-overlay,
        .sub-image-container:hover .image-overlay {
            background: rgba(0, 0, 0, 0.1);
        }

        .play-icon {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .main-image-container:hover .play-icon {
            opacity: 1;
        }

        .marketplace-content {
            padding: 2rem;
        }

        .feature-card {
            display: flex;
            align-items: start;
            padding: 1.5rem;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 12px;
            transition: all 0.3s ease;
        }

        .feature-card:hover {
            background: rgba(255, 255, 255, 0.1);
            transform: translateX(5px);
        }

        .feature-icon {
            width: 50px;
            height: 50px;
            min-width: 50px;
            background: var(--primary-color);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
            font-size: 1.5rem;
            color: white;
        }

        .feature-text {
            flex: 1;
        }

        .feature-text h5 {
            margin: 0 0 0.5rem;
            color: var(--text-primary);
        }

        .feature-text p {
            margin: 0;
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        .badge {
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .btn-lg {
            padding: 1rem 2rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
        }

        .btn-lg:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(var(--primary-rgb), 0.3);
        }

        @media (max-width: 768px) {
            .main-image, .sub-image {
                height: 200px;
            }

            .marketplace-content {
                padding: 1rem 0;
            }

            .feature-card {
                padding: 1rem;
            }
        }

        .genres-section {
            position: relative;
            overflow: hidden;
            padding: 5rem 0;
            background: linear-gradient(135deg, #001200 0%, #002200 100%);
        }

        .genres-background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #001200 0%, #002200 100%);
            z-index: -2;
        }

        .genres-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: 
                radial-gradient(circle at 20% 50%, rgba(0, 40, 0, 0.4) 0%, transparent 70%),
                radial-gradient(circle at 80% 50%, rgba(0, 40, 0, 0.4) 0%, transparent 70%);
            z-index: -1;
            animation: overlayFloat 15s ease-in-out infinite alternate;
        }

        @keyframes overlayFloat {
            0% { transform: translateY(0) scale(1); }
            100% { transform: translateY(-20px) scale(1.1); }
        }

        .genre-card {
            position: relative;
            border-radius: 15px;
            overflow: hidden;
            transition: all 0.4s ease;
            aspect-ratio: 16/9;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.6);
            margin-bottom: 1rem;
            border: 1px solid rgba(0, 255, 0, 0.1);
            animation: cardFloat 6s ease-in-out infinite;
            animation-delay: calc(var(--card-index) * 0.2s);
        }

        @keyframes cardFloat {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }

        .genre-card img {
            width: 100%;
            height: 100%;
            object-fit: cover;
