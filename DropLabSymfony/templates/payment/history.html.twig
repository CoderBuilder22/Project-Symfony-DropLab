{% extends 'base.html.twig' %}

{% block title %}Purchase History{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card bg-dark border-light">
                <div class="card-body">
                    <h2 class="card-title mb-4">Purchase History</h2>

                    {% if payments is empty %}
                        <div class="text-center py-5">
                            <i class="fas fa-shopping-cart text-muted mb-3" style="font-size: 3rem;"></i>
                            <h5 class="text-muted">No purchases yet</h5>
                            <p class="text-secondary">Start exploring beats to make your first purchase!</p>
                            <a href="{{ path('app_home') }}" class="btn btn-primary">
                                Browse Beats
                            </a>
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-dark table-hover align-middle">
                                <thead>
                                    <tr>
                                        <th>Beat</th>
                                        <th>Transaction ID</th>
                                        <th>Date</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for payment in payments %}
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="{{ asset('uploads/beats/' ~ payment.beat.coverImage) }}" 
                                                         alt="{{ payment.beat.title }}" 
                                                         class="rounded me-3"
                                                         style="width: 50px; height: 50px; object-fit: cover;">
                                                    <div>
                                                        <h6 class="mb-0">{{ payment.beat.title }}</h6>
                                                        <small class="text-muted">by {{ payment.beat.producer.username }}</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="text-secondary">{{ payment.transactionId }}</span>
                                            </td>
                                            <td>
                                                <span class="text-secondary">{{ payment.createdAt|date('M d, Y') }}</span>
                                            </td>
                                            <td>
                                                <span class="text-primary">${{ payment.amount }}</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-{{ payment.status == 'completed' ? 'success' : 'warning' }}">
                                                    {{ payment.status }}
                                                </span>
                                            </td>
                                            <td>
                                                {% if payment.status == 'completed' %}
                                                    <a href="{{ path('payment_download', {'id': payment.id}) }}" 
                                                       class="btn btn-outline-primary btn-sm">
                                                        <i class="fas fa-download me-1"></i>Download
                                                    </a>
                                                {% else %}
                                                    <button class="btn btn-outline-secondary btn-sm" disabled>
                                                        <i class="fas fa-clock me-1"></i>Pending
                                                    </button>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.card {
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    backdrop-filter: blur(10px);
}

.table {
    margin-bottom: 0;
}

.table th {
    border-top: none;
    font-weight: 500;
    text-transform: uppercase;
    font-size: 0.85rem;
    color: var(--text-secondary);
}

.table td {
    vertical-align: middle;
    color: var(--text-primary);
}

.btn-outline-primary {
    transition: all 0.3s ease;
}

.btn-outline-primary:hover {
    transform: translateY(-2px);
}

.badge {
    padding: 0.5em 0.8em;
    font-weight: 500;
}
</style>
{% endblock %} 