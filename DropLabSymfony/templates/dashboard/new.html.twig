{% extends 'base.html.twig' %}

{% block title %}Upload New Beat{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card bg-dark border-light">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="card-title mb-0">Upload New Beat</h2>
                        <a href="{{ path('app_dashboard') }}" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                        </a>
                    </div>

                    {{ form_start(form, {'attr': {'class': 'beat-form'}}) }}
                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-4">
                                    {{ form_label(form.title, 'Title', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Enter beat title'}}) }}
                                    {{ form_errors(form.title) }}
                                </div>

                                <div class="mb-4">
                                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '4', 'placeholder': 'Describe your beat...'}}) }}
                                    {{ form_errors(form.description) }}
                                    <small class="text-secondary">Add details about your beat's style, mood, and inspiration.</small>
                                </div>

                                <div class="row mb-4">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            {{ form_label(form.price, 'Price ($)', {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.price, {'attr': {'class': 'form-control', 'placeholder': '29.99'}}) }}
                                            {{ form_errors(form.price) }}
                                            <small class="text-secondary">Set a competitive price</small>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            {{ form_label(form.bpm, 'BPM', {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.bpm, {'attr': {'class': 'form-control', 'placeholder': '140'}}) }}
                                            {{ form_errors(form.bpm) }}
                                            <small class="text-secondary">Tempo in beats per minute</small>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.genre, 'Genre', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.genre, {'attr': {'class': 'form-select'}}) }}
                                    {{ form_errors(form.genre) }}
                                    <small class="text-secondary">Select the primary genre of your beat</small>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="upload-section">
                                    <div class="mb-4">
                                        {{ form_label(form.coverImage, 'Cover Image', {'label_attr': {'class': 'form-label'}}) }}
                                        <div class="cover-drop-zone mb-2" id="coverDropZone">
                                            <div class="cover-preview text-center">
                                                <i class="fas fa-image fa-2x mb-2"></i>
                                                <p class="mb-1">Drag & drop your cover image here</p>
                                                <small class="text-secondary">or click to browse</small>
                                            </div>
                                        </div>
                                        {{ form_widget(form.coverImage, {'attr': {'class': 'form-control', 'accept': 'image/*'}}) }}
                                        {{ form_errors(form.coverImage) }}
                                        <small class="text-secondary d-block mt-2">
                                            <i class="fas fa-info-circle me-1"></i>Recommended: JPG/PNG, 1000x1000px, max 2MB
                                        </small>
                                    </div>

                                    <div class="audio-upload mb-4">
                                        {{ form_label(form.audioFile, 'Audio File', {'label_attr': {'class': 'form-label'}}) }}
                                        <div class="audio-drop-zone mb-2" id="audioDropZone">
                                            <i class="fas fa-music fa-2x mb-2"></i>
                                            <p class="mb-1">Drag & drop your audio file here</p>
                                            <small class="text-secondary">or click to browse</small>
                                        </div>
                                        {{ form_widget(form.audioFile, {'attr': {'class': 'form-control', 'accept': 'audio/*'}}) }}
                                        {{ form_errors(form.audioFile) }}
                                        <small class="text-secondary d-block mt-2">
                                            <i class="fas fa-info-circle me-1"></i>Accepted formats: MP3, WAV
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-cloud-upload-alt me-2"></i>Upload Beat
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.card {
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    backdrop-filter: blur(10px);
}

.form-control, .form-select {
    background-color: var(--dark-bg);
    border: 1px solid var(--border-color);
    color: var(--text-primary);
    transition: all 0.3s ease;
    padding: 0.75rem 1rem;
    font-size: 0.95rem;
}

.form-control:focus, .form-select:focus {
    background-color: var(--dark-bg);
    border-color: var(--primary-color);
    box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
    color: var(--text-primary);
}

.form-label {
    color: var(--text-secondary);
    font-size: 0.95rem;
    margin-bottom: 0.5rem;
    font-weight: 500;
}

.audio-drop-zone {
    border: 2px dashed var(--border-color);
    border-radius: 10px;
    padding: 2rem 1rem;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s ease;
}

.audio-drop-zone:hover {
    border-color: var(--primary-color);
    background-color: rgba(13, 110, 253, 0.05);
}

.audio-drop-zone.dragover {
    border-color: var(--primary-color);
    background-color: rgba(13, 110, 253, 0.1);
}

.btn {
    padding: 0.75rem 1.5rem;
    font-weight: 500;
    transition: all 0.3s ease;
}

.btn:hover {
    transform: translateY(-2px);
}

.btn-primary:hover {
    box-shadow: 0 5px 15px rgba(13, 110, 253, 0.3);
}

small.text-secondary {
    font-size: 0.8rem;
    opacity: 0.8;
}

/* Hide the default file input */
input[type="file"] {
    opacity: 0;
    height: 0;
    width: 0;
    position: absolute;
}

/* Custom file input label */
.custom-file-label {
    background-color: var(--dark-bg);
    border: 1px solid var(--border-color);
    border-radius: 5px;
    padding: 0.75rem 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    display: block;
    text-align: center;
}

.custom-file-label:hover {
    border-color: var(--primary-color);
    background-color: rgba(13, 110, 253, 0.05);
}

.cover-drop-zone {
    border: 2px dashed var(--border-color);
    border-radius: 10px;
    padding: 2rem 1rem;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s ease;
    background-color: var(--dark-bg);
    min-height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.cover-drop-zone:hover {
    border-color: var(--primary-color);
    background-color: rgba(13, 110, 253, 0.05);
}

.cover-drop-zone.dragover {
    border-color: var(--primary-color);
    background-color: rgba(13, 110, 253, 0.1);
}

.cover-preview img {
    max-width: 100%;
    max-height: 180px;
    border-radius: 8px;
    margin-bottom: 1rem;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Cover Image Drop Zone
    const coverInput = document.querySelector('input[accept="image/*"]');
    const coverDropZone = document.getElementById('coverDropZone');

    coverDropZone.addEventListener('click', () => coverInput.click());

    ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
        coverDropZone.addEventListener(eventName, preventDefaults, false);
    });

    ['dragenter', 'dragover'].forEach(eventName => {
        coverDropZone.addEventListener(eventName, () => {
            coverDropZone.classList.add('dragover');
        });
    });

    ['dragleave', 'drop'].forEach(eventName => {
        coverDropZone.addEventListener(eventName, () => {
            coverDropZone.classList.remove('dragover');
        });
    });

    coverDropZone.addEventListener('drop', handleCoverDrop);
    coverInput.addEventListener('change', handleCoverSelect);

    function handleCoverDrop(e) {
        const file = e.dataTransfer.files[0];
        if (file && file.type.startsWith('image/')) {
            coverInput.files = e.dataTransfer.files;
            updateCoverPreview(file);
        }
    }

    function handleCoverSelect() {
        const file = this.files[0];
        if (file) {
            updateCoverPreview(file);
        }
    }

    function updateCoverPreview(file) {
        const reader = new FileReader();
        reader.onload = function(e) {
            coverDropZone.innerHTML = `
                <div class="cover-preview">
                    <img src="${e.target.result}" alt="Cover preview">
                    <p class="mb-1">${file.name}</p>
                    <small class="text-secondary">${(file.size / (1024 * 1024)).toFixed(2)} MB</small>
                </div>
            `;
        };
        reader.readAsDataURL(file);
    }

    // Audio Drop Zone
    const audioInput = document.querySelector('input[accept="audio/*"]');
    const dropZone = document.getElementById('audioDropZone');

    dropZone.addEventListener('click', () => audioInput.click());

    ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
        dropZone.addEventListener(eventName, preventDefaults, false);
    });

    function preventDefaults(e) {
        e.preventDefault();
        e.stopPropagation();
    }

    ['dragenter', 'dragover'].forEach(eventName => {
        dropZone.addEventListener(eventName, highlight, false);
    });

    ['dragleave', 'drop'].forEach(eventName => {
        dropZone.addEventListener(eventName, unhighlight, false);
    });

    function highlight(e) {
        dropZone.classList.add('dragover');
    }

    function unhighlight(e) {
        dropZone.classList.remove('dragover');
    }

    dropZone.addEventListener('drop', handleDrop, false);

    function handleDrop(e) {
        const dt = e.dataTransfer;
        const file = dt.files[0];

        if (file && file.type.startsWith('audio/')) {
            audioInput.files = dt.files;
            dropZone.innerHTML = `
                <i class="fas fa-check-circle fa-2x mb-2 text-success"></i>
                <p class="mb-1">${file.name}</p>
                <small class="text-secondary">${(file.size / (1024 * 1024)).toFixed(2)} MB</small>
            `;
        }
    }

    audioInput.addEventListener('change', function() {
        const file = this.files[0];
        if (file) {
            dropZone.innerHTML = `
                <i class="fas fa-check-circle fa-2x mb-2 text-success"></i>
                <p class="mb-1">${file.name}</p>
                <small class="text-secondary">${(file.size / (1024 * 1024)).toFixed(2)} MB</small>
            `;
        }
    });
});
</script>
{% endblock %} 