{% extends 'base.html.twig' %}

{% block title %}Producer Dashboard{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .audio-player {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            background: rgba(18, 18, 18, 0.95);
            padding: 10px 20px;
            z-index: 1000;
            display: none;
            align-items: center;
            justify-content: center;
            gap: 15px;
        }
        
        .audio-player.active {
            display: flex;
        }

        .beat-cover {
            position: relative;
            cursor: pointer;
        }

        .play-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: opacity 0.2s;
        }

        .beat-cover:hover .play-overlay {
            opacity: 1;
        }

        .play-icon {
            color: white;
            font-size: 20px;
        }

        #audioPlayer {
            width: 100%;
            max-width: 800px;
        }

        #audioPlayer::-webkit-media-controls-panel {
            background-color: rgba(255, 255, 255, 0.1);
        }

        #audioPlayer::-webkit-media-controls-current-time-display,
        #audioPlayer::-webkit-media-controls-time-remaining-display {
            color: white;
        }

        .close-player {
            color: white;
            background: none;
            border: none;
            font-size: 20px;
            cursor: pointer;
            padding: 5px;
            transition: color 0.2s;
        }

        .close-player:hover {
            color: #dc3545;
        }

        /* Profile section styles */
        .profile-section {
            text-align: center;
            padding: 20px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 10px;
            margin-bottom: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .profile-image {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            margin: 0 auto 15px auto;
            object-fit: cover;
            border: 3px solid var(--primary-color);
            display: block;
        }

        .producer-name {
            font-size: 1.5rem;
            margin-bottom: 5px;
            color: white;
        }

        .producer-role {
            color: rgba(255, 255, 255, 0.7);
            margin-bottom: 15px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container-fluid py-5">
    <div class="row">
        <!-- Sidebar with Profile -->
        <div class="col-lg-3">
            <div class="profile-section">
                {% if app.user.profilePicture %}
                    <img src="{{ asset('uploads/profile/' ~ app.user.profilePicture) }}" alt="{{ app.user.username }}" class="profile-image">
                {% else %}
                    <div class="profile-image d-flex align-items-center justify-content-center bg-primary">
                        <i class="fas fa-user fa-2x text-white"></i>
                    </div>
                {% endif %}
                <h3 class="producer-name">{{ app.user.username }}</h3>
                <p class="producer-role">Producer</p>
                
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-0">My Beats</h2>
                    <p class="text-secondary mb-0">Manage your beats collection</p>
                </div>
                <a href="{{ path('app_dashboard_beat_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Upload New Beat
                </a>
            </div>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>{{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% if beats is empty %}
                <div class="text-center py-5">
                    <div class="empty-state mb-4">
                        <i class="fas fa-music text-secondary" style="font-size: 4rem;"></i>
                    </div>
                    <h5 class="text-secondary">No Beats Yet</h5>
                    <p class="text-muted">Start uploading your beats to share with the world!</p>
                    <a href="{{ path('app_dashboard_beat_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Upload Your First Beat
                    </a>
                </div>
            {% else %}
                <div class="card bg-dark border-light mb-4">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-dark table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th style="width: 50px;"></th>
                                        <th>Title</th>
                                        <th>Genre</th>
                                        <th>BPM</th>
                                        <th>Price</th>
                                        <th>Created</th>
                                        <th style="width: 100px;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for beat in beats %}
                                        <tr>
                                            <td>
                                                <div class="beat-cover" 
                                                     data-audio="{{ asset('uploads/beats/' ~ beat.audioFile) }}"
                                                     data-title="{{ beat.title }}"
                                                     data-id="{{ beat.id }}">
                                                    <img src="{{ asset('uploads/images/covers/' ~ beat.coverImage) }}" 
                                                         alt="{{ beat.title }}" 
                                                         style="width: 50px; height: 50px; object-fit: cover;">
                                                    <div class="play-overlay">
                                                        <i class="fas fa-play play-icon"></i>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div>{{ beat.title }}</div>
                                                <small class="text-secondary">{{ beat.description|length > 50 ? beat.description|slice(0, 50) ~ '...' : beat.description }}</small>
                                            </td>
                                            <td>{{ beat.genre }}</td>
                                            <td>{{ beat.bpm }} BPM</td>
                                            <td>${{ beat.price }}</td>
                                            <td>{{ beat.createdAt|date('M d, Y') }}</td>
                                            <td>
                                                <div class="btn-group">
                                                    <a href="{{ path('app_dashboard_beat_edit', {'id': beat.id}) }}" 
                                                       class="btn btn-sm btn-outline-light" 
                                                       data-bs-toggle="tooltip" 
                                                       title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <form action="{{ path('app_dashboard_beat_delete', {'id': beat.id}) }}" 
                                                          method="post" 
                                                          class="d-inline" 
                                                          onsubmit="return confirm('Are you sure you want to delete this beat?');">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ beat.id) }}">
                                                        <button type="submit" 
                                                                class="btn btn-sm btn-outline-danger" 
                                                                data-bs-toggle="tooltip" 
                                                                title="Delete">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<!-- Simple Audio Player -->
<div class="audio-player">
    <audio id="audioPlayer" controls></audio>
    <button class="close-player" id="closePlayer">
        <i class="fas fa-times"></i>
    </button>
</div>

<style>
.list-group-item {
    background-color: var(--dark-bg);
    border-color: rgba(255, 255, 255, 0.1);
    color: var(--text-primary);
    transition: all 0.3s ease;
    padding: 0.75rem 1rem;
}

.list-group-item:hover {
    background-color: var(--darker-bg);
    transform: translateX(5px);
}

.list-group-item.active {
    background-color: var(--primary-color);
    border-color: var(--primary-color);
}

.card {
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.profile-image {
    border: 3px solid var(--primary-color);
    padding: 3px;
    transition: all 0.3s ease;
}

.profile-image:hover {
    transform: scale(1.05);
}

.stat-icon {
    width: 45px;
    height: 45px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.bg-primary-soft {
    background-color: rgba(13, 110, 253, 0.1);
}

.bg-success-soft {
    background-color: rgba(25, 135, 84, 0.1);
}

.table {
    margin-bottom: 0;
}

.table > :not(caption) > * > * {
    padding: 1rem;
    background-color: transparent;
    border-bottom-color: rgba(255, 255, 255, 0.1);
}

.table > tbody > tr:hover {
    background-color: rgba(255, 255, 255, 0.05);
}

.empty-state {
    animation: float 3s ease-in-out infinite;
}

.btn-group .btn {
    padding: 0.375rem 0.75rem;
}

.alert {
    border: none;
    border-radius: 10px;
}

.badge {
    font-weight: 500;
    padding: 0.35em 0.65em;
}

@keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
}

/* Tooltip styling */
.tooltip {
    font-size: 0.8rem;
}

/* Custom scrollbar */
::-webkit-scrollbar {
    width: 8px;
    height: 8px;
}

::-webkit-scrollbar-track {
    background: var(--darker-bg);
}

::-webkit-scrollbar-thumb {
    background: var(--primary-color);
    border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
    background: var(--primary-hover);
}

.beat-cover.playing .play-icon {
    display: none;
}

.beat-cover.playing .pause-icon {
    display: block !important;
}

.beat-cover.playing .play-overlay {
    opacity: 1;
    background: rgba(var(--primary-color-rgb), 0.5);
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const audioPlayer = document.getElementById('audioPlayer');
    const playerContainer = document.querySelector('.audio-player');
    const closePlayer = document.getElementById('closePlayer');
    let currentBeatId = null;

    document.querySelectorAll('.beat-cover').forEach(cover => {
        cover.addEventListener('click', function() {
            const audioUrl = this.dataset.audio;
            const beatId = this.dataset.id;

            if (currentBeatId === beatId && !audioPlayer.paused) {
                audioPlayer.pause();
                return;
            }

            if (currentBeatId !== beatId) {
                audioPlayer.src = audioUrl;
                currentBeatId = beatId;
            }

            playerContainer.classList.add('active');
            audioPlayer.play().catch(function(error) {
                console.log("Audio play failed:", error);
            });
        });
    });

    closePlayer.addEventListener('click', function() {
        audioPlayer.pause();
        audioPlayer.currentTime = 0;
        playerContainer.classList.remove('active');
        currentBeatId = null;
        updateAllPlayIcons();
    });

    audioPlayer.addEventListener('play', function() {
        updateAllPlayIcons();
        const activeBeat = document.querySelector(`[data-id="${currentBeatId}"]`);
        if (activeBeat) {
            const icon = activeBeat.querySelector('.play-overlay i');
            icon.classList.remove('fa-play');
            icon.classList.add('fa-pause');
        }
    });

    audioPlayer.addEventListener('pause', function() {
        const activeBeat = document.querySelector(`[data-id="${currentBeatId}"]`);
        if (activeBeat) {
            const icon = activeBeat.querySelector('.play-overlay i');
            icon.classList.remove('fa-pause');
            icon.classList.add('fa-play');
        }
    });

    audioPlayer.addEventListener('ended', function() {
        updateAllPlayIcons();
        currentBeatId = null;
    });

    function updateAllPlayIcons() {
        document.querySelectorAll('.play-overlay i').forEach(icon => {
            icon.classList.remove('fa-pause');
            icon.classList.add('fa-play');
        });
    }
});
</script>
{% endblock %} 
